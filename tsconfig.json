{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "sourceMap": false,
    "strict": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "erasableSyntaxOnly": true,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
  },
  "include": [
    "ambient.d.ts",
    "src/*.ts"
  ],
}